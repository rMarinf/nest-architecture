{
  "name": "nest-architecture",
  "version": "1.0.0",
  "description": "Nest Architecture Test",
  "author": "Roberto Marin (kados)",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "copy:config": "ncp src/config/environments dist/config/environments",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "export NODE_ENV=development && ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "export NODE_ENV=development && nodemon | bunyan",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build && npm run copy:config",
    "start:prod": "export NODE_ENV=production && node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./e2e/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^9.2.1",
    "@nestjs/mongoose": "^5.2.2",
    "api-query-params": "^4.9.0",
    "bunyan": "^1.8.12",
    "cache-manager": "^2.9.0",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "compression": "^1.7.3",
    "dotenv": "^6.2.0",
    "express-paginate": "^1.0.0",
    "helmet": "^3.15.0",
    "http-proxy-middleware": "^0.19.1",
    "joi": "^14.3.1",
    "mongoose": "^5.4.4",
    "morgan": "^1.9.1",
    "ncp": "^2.0.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "typescript": "^3.0.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.0",
    "@types/http-proxy-middleware": "^0.19.2",
    "@types/jest": "^23.3.1",
    "@types/joi": "^14.3.0",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "chai": "^4.2.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
